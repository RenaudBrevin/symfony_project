{% extends 'base.html.twig' %}

{% block title %}product{% endblock %}

{% block body %}
    {% for product in products %}
        {% if product.id == id %}
            <h1>{{ product.name }}</h1>
            <img src='{{ product.imageUrl }}' alt='{{ product.name }}'>
            <p>{{ product.price }} €</p>
            <p>{{ product.stock }} en stock</p>
        {% endif %}
    {% endfor %}

    <a href="{{ path('app_app') }}">Revenir à la liste de tous les produits</a>
{% endblock %}
